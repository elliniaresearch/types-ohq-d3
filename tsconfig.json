{
	"compilerOptions": {
		"esModuleInterop": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist/",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2022"
	},
	"include": [
		"packages/**/*.ts",
		"packages/**/*.d.ts",
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	]
}
